<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.BeerDetailFragment"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <Button
            android:id="@+id/back_to_list_arrow"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/ic_baseline_arrow_back_24">

        </Button>

        <ImageView
            android:id="@+id/beer_detailpage_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/beer_detailpage_beer_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/black"
            tools:text="beer name"
            android:layout_marginTop="10dp"
            >

        </TextView>

        <TextView
            android:id="@+id/beer_detailpage_tagline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            tools:text="tagline"
            android:fontFamily="@font/beaurivage_regular"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:layout_gravity="center"
            >

        </TextView>
        <TextView
            android:id="@+id/beer_detailpage_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            tools:text="Description"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_regular"
            android:textAlignment="center"
            android:layout_gravity="center"
            >

        </TextView>

        <TextView
            android:id="@+id/beer_detailpage_brewer_tips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            tools:text="Brewer tips"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:layout_gravity="center"
            >

        </TextView>

        <TextView
            android:id="@+id/beer_detailpage_contributor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            tools:text="Contributor"
            android:fontFamily="@font/poppins_black"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:layout_gravity="center"
            >

        </TextView>



    </LinearLayout>


</ScrollView>